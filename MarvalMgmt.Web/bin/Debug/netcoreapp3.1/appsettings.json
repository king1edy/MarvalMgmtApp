{
  "connectionstrings": {
    "defaultconnection": "Server=.\\SQLEXPRESS;Database=MarvalMgmt.dev;Integrated Security=true;multipleactiveresultsets=true;TrustServerCertificate=True"
  },
  "appsettings": {
    "allowedcorsorigins": [ "https://localhost:44327", "https://localhost:44328" ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occurred while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs\\structured-logs\\structured-log.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "MarvalMgmtApp"
    }
  },
  "logging": {
    "loglevel": {
      "default": "information",
      "microsoft.aspnetcore": "warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  }
}